{
  "name": "vue-dapp-starter",
  "description": "A starter template for a Web3 dapp based on Vue3 running on Vite and Typescript.",
  "homepage": "https://github.com/RazorSiM/vue-dapp-starter",
  "author": {
    "name": "Simone 'Raz' Colabufalo",
    "email": "me@raz.works",
    "url": "https://github.com/RazorSiM"
  },
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "serve": "vite preview",
    "stylelint-check": "stylelint-config-prettier-check",
    "lint": "eslint --ext .js,.vue src --fix",
    "lint:style": "stylelint src/**/*.{css,vue} --fix",
    "prettier:check": "prettier --check .",
    "prettier:write": "prettier --write .",
    "generate-types": "typechain --target ethers-v5 --out-dir src/types/chain 'src/types/abis/*.json'",
    "postinstall": "npm run generate-types"
  },
  "dependencies": {
    "@ethersproject/abi": "^5.4.1",
    "@ethersproject/address": "^5.4.0",
    "@ethersproject/bignumber": "^5.4.2",
    "@ethersproject/bytes": "^5.4.0",
    "@ethersproject/constants": "^5.4.0",
    "@ethersproject/contracts": "^5.4.1",
    "@ethersproject/providers": "^5.4.5",
    "@ethersproject/units": "^5.4.0",
    "@metamask/detect-provider": "^1.2.0",
    "@vueuse/core": "^6.6.1",
    "axios": "^0.23.0",
    "dayjs": "^1.10.7",
    "ethers": "^5.4.7",
    "pinia": "^2.0.0-rc.13",
    "vue": "^3.2.3",
    "vue-router": "^4.0.10"
  },
  "devDependencies": {
    "@arkweid/lefthook": "^0.7.6",
    "@iconify/json": "^1.1.415",
    "@typechain/ethers-v5": "^7.2.0",
    "@types/node": "^16.11.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "@vitejs/plugin-vue": "^1.9.2",
    "@vue/compiler-sfc": "^3.2.19",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-vue": "^7.18.0",
    "prettier": "^2.4.1",
    "stylelint": "^13.13.1",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^22.0.0",
    "typechain": "^5.2.0",
    "typescript": "^4.4.4",
    "unplugin-auto-import": "^0.4.12",
    "unplugin-icons": "^0.12.16",
    "unplugin-vue-components": "^0.15.5",
    "vite": "^2.6.7",
    "vite-plugin-windicss": "^1.4.11",
    "vue-eslint-parser": "^7.10.0",
    "vue-tsc": "^0.28.1",
    "windicss": "^3.1.8"
  }
}
