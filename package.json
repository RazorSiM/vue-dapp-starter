{
  "name": "vue-dapp-starter",
  "description": "A starter template for a Web3 dapp based on Vue3 running on Vite and Typescript.",
  "homepage": "https://github.com/RazorSiM/vue-dapp-starter",
  "author": {
    "name": "Simone 'Raz' Colabufalo",
    "email": "me@raz.works",
    "url": "https://github.com/RazorSiM"
  },
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "serve": "vite preview",
    "stylelint-check": "stylelint-config-prettier-check",
    "lint": "eslint --ext .js,.vue src --fix",
    "lint:style": "stylelint src/**/*.{css,vue} --fix",
    "prettier:check": "prettier --check .",
    "prettier:write": "prettier --write .",
    "generate-types": "typechain --target ethers-v5 --out-dir src/types/chain 'src/types/abis/*.json'",
    "generate-graphql": "graphql-codegen -r dotenv/config --config codegen.yml",
    "postinstall": "npm run generate-types && cp .env.example .env",
    "startGanache": "ganache --wallet.mnemonic='test test test test test test test test test test test junk'"
  },
  "dependencies": {
    "@ethersproject/abi": "^5.5.0",
    "@ethersproject/address": "^5.5.0",
    "@ethersproject/bignumber": "^5.5.0",
    "@ethersproject/bytes": "^5.5.0",
    "@ethersproject/constants": "^5.5.0",
    "@ethersproject/contracts": "^5.5.0",
    "@ethersproject/providers": "^5.5.1",
    "@ethersproject/units": "^5.5.0",
    "@metamask/detect-provider": "^1.2.0",
    "@urql/vue": "^0.6.1",
    "@vueuse/core": "^7.4.1",
    "dayjs": "^1.10.7",
    "ethereum-blockies-base64": "^1.0.2",
    "ethers": "^5.5.2",
    "graphql": "^15.0.0",
    "graphql-tag": "^2.12.6",
    "ohmyfetch": "^0.4.14",
    "pinia": "^2.0.9",
    "vue": "^3.2.26",
    "vue-router": "^4.0.10"
  },
  "devDependencies": {
    "@arkweid/lefthook": "^0.7.6",
    "@graphql-codegen/cli": "^2.3.0",
    "@graphql-codegen/introspection": "^2.1.0",
    "@graphql-codegen/typescript": "^2.4.1",
    "@graphql-codegen/typescript-operations": "^2.2.1",
    "@graphql-codegen/typescript-vue-urql": "^2.2.1",
    "@iconify/json": "^2.0.31",
    "@typechain/ethers-v5": "^9.0.0",
    "@types/node": "^17.0.5",
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "@typescript-eslint/parser": "^5.8.1",
    "@vitejs/plugin-vue": "^2.0.1",
    "@vue/compiler-sfc": "^3.2.26",
    "eslint": "^8.5.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-vue": "^8.2.0",
    "ganache": "^7.0.1",
    "prettier": "^2.5.1",
    "stylelint": "^14.2.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^24.0.0",
    "typechain": "^7.0.0",
    "typescript": "^4.5.4",
    "unplugin-auto-import": "^0.5.5",
    "unplugin-icons": "^0.13.0",
    "unplugin-vue-components": "^0.18.1",
    "vite": "^2.7.7",
    "vite-plugin-windicss": "^1.6.1",
    "vue-eslint-parser": "^8.0.0",
    "vue-tsc": "^0.31.1",
    "windicss": "^3.4.1"
  }
}
